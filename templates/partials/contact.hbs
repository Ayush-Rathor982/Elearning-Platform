<div class="container-fluid mt-6 contact-style" id="contactid">
    <div class="row">
        <div class="col-md-10 col-12 mx-auto">
            <h1 class="text-center sub-heading"><b>Contact US</b></h1>
            <p class="text-center sub-heading">we will be happy to help you</p>

            <div class="row">
                <div class="col-md-6 col-12 mx-auto">

                    <form action="#" method="POST">
                        <div class="form-group">
                            <label for="exampleInputPassword1"><b>Name</b></label>
                            <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Name" name="name">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1" class="form-label"><b>Email address</b></label>
                            <input type="email" class="form-control" id="exampleInputEmail1" name="email">
                            <small id="emailHelp" class="form-text">We'll never share your email with anyone else.</small>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1"><b>Phone</b></label>
                            <input type="number" class="form-control" id="exampleInputPassword1" placeholder="Phone Number" name="phone">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1"><b>Message</b></label>
                            <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Message" name="message">
                        </div>

                        <button type="submit" class="btn-style btn-primary">Submit</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>


